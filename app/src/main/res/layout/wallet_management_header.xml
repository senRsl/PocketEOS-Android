<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wallet_management_header_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/color_bg_main"
    android:orientation="vertical">

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFF7EA"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/dimens_10"
        android:padding="@dimen/dimens_20"
        android:text="@string/wallect_intro"
        android:textColor="#FFFFB540"
        android:textSize="@dimen/dimens_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_90"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimens_20"
        android:paddingRight="@dimen/dimens_20"
        android:paddingTop="@dimen/dimens_20">

        <TextView
            android:id="@+id/create_number"
            style="?attr/text_one_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/create_number"
            android:gravity="center"
            android:text="@string/create_number"
            android:textSize="@dimen/dimens_12" />

        <TextView
            android:id="@+id/import_number"
            style="?attr/text_one_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/import_number"
            android:gravity="center"
            android:text="@string/import_number"
            android:textSize="@dimen/dimens_12" />

        <TextView
            android:id="@+id/backup_number"
            style="?attr/text_one_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/backup_number"
            android:gravity="center"
            android:text="@string/backup_number"
            android:textSize="@dimen/dimens_12" />

        <TextView
            android:id="@+id/reset_password"
            style="?attr/text_one_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableTop="@mipmap/reset_password"
            android:gravity="center"
            android:text="@string/reset_password"
            android:textSize="@dimen/dimens_12" />
    </LinearLayout>

    <View
        style="?attr/item_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_68"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimens_20"
        android:paddingRight="@dimen/dimens_20">

        <TextView
            style="?attr/text_one_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_number"
            android:textSize="@dimen/dimens_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10"
            android:text="@string/main_number_notice"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/dimens_12" />
    </LinearLayout>

    <View
        style="?attr/line_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_line_cash" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_66">

        <ImageView
            android:id="@+id/main_account_img"
            android:layout_width="@dimen/dimens_36"
            android:layout_height="@dimen/dimens_36"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_20"
            android:layout_marginRight="@dimen/dimens_20"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/main_account"
            style="?attr/text_one_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/main_account_img"
            android:drawablePadding="@dimen/dimens_10"
            android:gravity="center_vertical"
            android:text="@string/vip158415321561"
            android:textSize="@dimen/dimens_15" />
    </RelativeLayout>


    <View
        style="?attr/item_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_10" />

    <TextView
        style="?attr/text_one_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_48"
        android:layout_marginLeft="@dimen/dimens_20"
        android:gravity="center_vertical"
        android:text="@string/other_number"
        android:textSize="@dimen/dimens_13" />

    <View
        style="?attr/line_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_line_cash" />
</LinearLayout>
